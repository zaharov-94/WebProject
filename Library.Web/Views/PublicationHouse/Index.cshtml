@model IEnumerable<Library.Web.Entities.PublicationHouse>
@{
    ViewBag.Title = "Publication houses Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/dashboard.css")
@Styles.Render("~/Content/Site.css")
<header class="masthead col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
    <h3 class="text-muted">Publication houses</h3>
</header>
<div class="tab-content col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <br />
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Add publication house", "Create", null, new { @class = "btn btn-success" })
        </p>
    </div>
</div>
